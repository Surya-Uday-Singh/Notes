<% if ( locals.id > -1 ) { %>
<div class="height-100">
  <div class="form-group h-25 d-flex flex-column justify-content-center">
    <label for="title" class="h1" name="title">Title</label>
    <input
      type="text"
      class="form-control h-25"
      id="noteTitle"
      aria-describedby="title"
      placeholder="Enter title"
      value="<%= noteArr[id].title %>"
    />
  </div>
  <div class="form-group h-75">
    <div id="editor" class="h-75">
      <p><%= noteArr[id].text %> ppp</p>
    </div>
    <button type="submit" class="btn btn-primary w-100" id="submitBtn">
      Save
    </button>
  </div>
</div>
<% } else { %>
<div class="height-100">
  <div class="form-group h-25 d-flex flex-column justify-content-center">
    <label for="title" class="h1" name="title">Title</label>
    <input
      type="text"
      class="form-control h-25"
      id="noteTitle"
      aria-describedby="title"
      placeholder="Enter title"
    />
  </div>
  <div class="form-group h-75">
    <div id="editor" class="h-75">
      <p></p>
    </div>
    <button type="submit" class="btn btn-primary w-100" id="submitBtn">
      Save
    </button>
  </div>
</div>
<% } %>
